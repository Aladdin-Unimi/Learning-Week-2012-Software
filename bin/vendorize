#!/bin/bash

mkdir -p lw/vendorized
curl -sL https://github.com/mitsuhiko/jinja2/tarball/2.6 | tar -C lw/vendorized --strip 1 --wildcards -zxvf - '*/jinja2'
curl -sL https://github.com/mitsuhiko/werkzeug/tarball/0.8.3 | tar -C lw/vendorized --strip 1 --exclude 'docs' --wildcards -zxvf - '*/werkzeug'
curl -sL https://github.com/mitsuhiko/flask/tarball/0.8 | tar -C lw/vendorized --strip 1 --wildcards -zxvf - '*/flask'
